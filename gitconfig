[user]
  name = Sebastien Saunier
  mail = seb@saunier.me
  email = seb@saunier.me

[github]
  user = ssaunier

[color]
  branch = auto
  diff = always
  interactive = auto
  status = auto
  ui = auto

[color "branch"]
  current = green
  remote = yellow

[core]
	editor = '/Applications/Sublime Text 2.app/Contents/SharedSupport/bin/subl' -n -w
  pager = less -FRSX
  mergeoptions = --no-edit

[alias]
  co = checkout
  st = status -sb
  br = branch
  ci = commit
  fo = fetch origin
  mom = merge origin master
  d = !git --no-pager diff
  dt  = difftool
  stat = !git --no-pager diff --stat
  s = !git status --short --untracked-files=all

  # Clean merged branches
  sweep = !git branch --merged master | grep -v 'master$' | xargs git branch -d && git remote prune origin

  # http://www.jukie.net/bart/blog/pimping-out-git-log
  lg = log --graph --all --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(yellow)%d%Creset'

  # Serve local repo. http://coderwall.com/p/eybtga
  # Then other can access via `git clone git://#{YOUR_IP_ADDRESS}/
  serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git

  m = checkout master

  # Removes a file from the index
  unstage = reset HEAD --

[difftool "Kaleidoscope"]  # Very nice diff tool for mac: http://www.kaleidoscopeapp.com
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[diff]
  tool = Kaleidoscope

[push]
  default = simple

[filter "media"]
  required = true
	clean = git media clean %f
	smudge = git media smudge %f

[branch "master"]
	mergeoptions = --no-edit

[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge --merge\n--result=$MERGED $LOCAL $BASE $REMOTE
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
